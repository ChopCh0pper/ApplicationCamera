<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:text="@string/car_name"/>

    <TextView
        android:id="@+id/governmentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/governmentNumber"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/carName"
        app:layout_constraintLeft_toLeftOf="@id/carName" />

    <TextView
        android:id="@+id/prodactionYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/production_year"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/governmentNumber"
        app:layout_constraintLeft_toLeftOf="@id/governmentNumber" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/prodactionYear"
        app:layout_constraintLeft_toLeftOf="@id/prodactionYear" />

    <TextView
        android:id="@+id/steeringWheelPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steering_wheel_position"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintLeft_toLeftOf="@id/category" />

    <TextView
        android:id="@+id/engineTipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/engine_tipe"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/steeringWheelPosition"
        app:layout_constraintLeft_toLeftOf="@id/steeringWheelPosition"/>

    <TextView
        android:id="@+id/enginePower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/engine_tipe"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/engineTipe"
        app:layout_constraintLeft_toLeftOf="@id/engineTipe"/>

    <TextView
        android:id="@+id/engineCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/engine_capacity"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/enginePower"
        app:layout_constraintLeft_toLeftOf="@id/enginePower"/>

</androidx.constraintlayout.widget.ConstraintLayout>